        // Dapr definitions----------------------------------------------------
        // 1. basket
        {
            "appId": "dapr-gql-basket",
            "appPort":      10001,
            "httpPort":     20001,
            "grpcPort":     30001,
            "metricsPort":  40001,
            "placementAddress": "localhost:6010",
            "label": "daprd-debug-basket",
            "type": "daprd",
            "problemMatcher": {
            "pattern": [
                {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            ],
            "background": {
                "beginsPattern": "^.*starting Dapr Runtime.*",
                "endsPattern": "^.*waiting on port.*"
                }
            },
            "dependsOn": "build-basket"
        },
        {
            "appId": "dapr-gql-basket",
            "label": "daprd-down-basket",
            "type": "daprd-down"
        },
